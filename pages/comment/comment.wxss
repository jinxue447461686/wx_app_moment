.moment-item {
    margin: 10rpx 20rpx;
    background-color: white;
    border-radius: 5rpx;
    border-style: solid;
    border-width: 1rpx;
    border-color: #D5D5D5;
}

.moment-item-title {
    font-family: Helvetica Neue, Helvetica, STHeiTi, sans-serif;
    font-size: 14px;
    display: flex;
    margin: 20rpx 20rpx 20rpx;
}

.moment-item-image {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 20rpx;
}
.txt-comment{
    position: absolute;
    border-style:solid;
    border-width: 1rpx;
    border-color:#D5D5D5;
    display: flex;
    justify-content:space-between;
    bottom:0rpx;
    width:100%;
    background-color: white;
}
.txt-comment-input{
    border-style: solid;
    border-radius: 10rpx;
    border-width: 1rpx;
    border-color: #D5D5D5;
    height: 70rpx;
    margin:10rpx 10rpx 10rpx 20rpx;
    width: 80%;
    padding-left: 55rpx;
    padding-top: 5rpx;
    display: flex;
    align-items:center;
    background-color: white;
}
.txt-comment-pen{
    position: absolute;
    bottom: 12rpx;
    left: 20rpx;
}
.txt-comment-send{
    position: absolute;
    bottom: 12rpx;
    right: 22rpx;
}

